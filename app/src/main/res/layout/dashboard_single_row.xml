<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:elevation="10dp"
    android:layout_margin="10dp"
    android:id="@+id/bookInfo"
    android:clickable="true"

    android:background="@drawable/customborder">

    <ImageView
        android:id="@+id/imgBookImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"

        android:src="@drawable/ic_book_image"
        android:contentDescription="@string/holds_book_image" />

    <TextView
        android:id="@+id/txtBookName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imgBookImage"
        android:text="@string/list_item"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtAuthorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_of_the_author"
        android:layout_toEndOf="@id/imgBookImage"
        android:layout_alignTop="@id/txtBookName"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txtAuthorName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@id/imgBookImage"
        android:text="@string/rs_299"
        android:id="@+id/txtBookCost"
        android:textColor="#008542"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/star_icon_dashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/txtBookRating"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="19dp"
        android:layout_toStartOf="@+id/txtBookRating"
        android:src="@drawable/ic_rating"
        android:contentDescription="@string/holds_the_star_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:id="@+id/txtBookRating"
        android:text="@string/_2_9"
        android:textColor="#FED600" />

</RelativeLayout>